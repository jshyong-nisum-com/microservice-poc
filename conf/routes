# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.RegistrationController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

# Registrations          
GET     /registrations                  controllers.RegistrationController.registrations()
POST    /registrations                  controllers.RegistrationController.saveRegistration()
POST    /registrations/:id/delete       controllers.RegistrationController.deleteRegistration(id: Long)
GET     /registrations/:id/update       controllers.RegistrationController.updateRegistration(id: Long)
